	<children>
		<Label layoutX="87.0" layoutY="14.0" text="Keystore Access">
			<font>
				<Font size="18.0" />
			</font>
		</Label>
		<Separator layoutY="40.0" prefHeight="0.0" prefWidth="300.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
		<Label layoutX="14.0" layoutY="43.0" text="Please enter the password to unlock the keystore:" AnchorPane.leftAnchor="14.0" />
		<PasswordField fx:id="keystorePasswordField" layoutX="13.0" layoutY="60.0" prefHeight="25.0" prefWidth="275.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" />
		<Button fx:id="unlockKeystoreBtn" layoutX="101.0" layoutY="92.0" mnemonicParsing="false" text="Unlock keystore" />
		<Separator layoutX="2.0" layoutY="124.0" prefHeight="0.0" prefWidth="300.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="125.0" />
		<Accordion layoutX="3.0" layoutY="126.0" prefHeight="121.0" prefWidth="303.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0">
			<panes>
				<TitledPane animated="false" expanded="false" minHeight="450.0" text="Generate Certificate">
               <content>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="14.0" layoutY="6.0" text="NOTE: This will delete the existing certifcate">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <Label layoutX="14.0" layoutY="31.0" text="Keystore password:" />
                        <PasswordField layoutX="14.0" layoutY="48.0" prefHeight="25.0" prefWidth="275.0" />
                        <Label layoutX="14.0" layoutY="80.0" text="Certifcate password:" />
                        <PasswordField layoutX="14.0" layoutY="97.0" prefHeight="25.0" prefWidth="275.0" />
                        <Label layoutX="14.0" layoutY="129.0" text="Key algorithm:" />
                        <ComboBox layoutX="94.0" layoutY="125.0" prefWidth="150.0" />
                        <Label layoutX="14.0" layoutY="157.0" text="Alias:" />
                        <TextField layoutX="47.0" layoutY="153.0" prefHeight="25.0" prefWidth="243.0" />
                     </children>
                  </Pane>
               </content></TitledPane>
			</panes>
		</Accordion>
	</children>
</AnchorPane>
