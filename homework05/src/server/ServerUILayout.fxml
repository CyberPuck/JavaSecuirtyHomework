						<Button layoutX="182.0" layoutY="76.0" mnemonicParsing="false" prefHeight="70.0" prefWidth="237.0" text="Save Settings, will restart server" />
						<Separator layoutY="154.0" prefHeight="8.0" prefWidth="600.0" />
						<Label layoutX="4.0" layoutY="162.0" text="Client Certificate Management:">
							<font>
								<Font size="18.0" />
							</font>
						</Label>
						<Button fx:id="revokeClientCertBtn" layoutX="191.0" layoutY="189.0" mnemonicParsing="false" prefHeight="53.0" prefWidth="219.0" text="Revoke all client certifiates">
							<font>
								<Font size="14.0" />
							</font>
						</Button>
						<Label layoutX="14.0" layoutY="281.0" text="Import client certificate:" />
						<TextField fx:id="clientCertField" layoutX="154.0" layoutY="277.0" prefHeight="25.0" prefWidth="367.0" />
						<Button fx:id="browseCertBtn" layoutX="531.0" layoutY="277.0" mnemonicParsing="false" text="Browse" />
						<Button fx:id="importCertBtn" layoutX="154.0" layoutY="310.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="141.0" text="Import client certificate" />
						<Label layoutX="14.0" layoutY="46.0" text="Server Port:" />
						<TextField fx:id="serverPortField" layoutX="127.0" layoutY="42.0" prefHeight="25.0" prefWidth="74.0" />
					</children>
				</AnchorPane>
			</content>
		</Tab>
	</tabs>
</TabPane>
