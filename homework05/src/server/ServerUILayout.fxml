               </children>
            </AnchorPane>
         </content>
		</Tab>
		<Tab closable="false" text="Clients">
			<content>
				<ScrollPane fx:id="clientScrollPane" prefHeight="200.0" prefWidth="200.0">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="372.0" prefWidth="600.0" />
					</content>
				</ScrollPane>
			</content>
		</Tab>
		<Tab closable="false" text="Settings">
			<content>
				<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
					<children>
						<Label layoutX="14.0" layoutY="14.0" text="Log file location:" />
